<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddressNumberActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_personal_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="NGUYỄN QUỐC TRỌN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:text="(Mặc định)"
        android:textColor="@color/pink"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_profile_name"
        app:layout_constraintStart_toEndOf="@+id/txt_profile_name"

        app:layout_constraintTop_toTopOf="@+id/txt_profile_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="bottom"
        android:text="Sửa"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_profile_name"

        app:layout_constraintEnd_toStartOf="@+id/txt_remove_address"

        app:layout_constraintTop_toTopOf="@+id/txt_profile_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_remove_address"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="Xóa"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_add_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_add_address"
        tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/line_top"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_profile_name"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/txt_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
                android:drawablePadding="5dp"
                android:text="0987654321" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_top"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            tools:ignore="MissingConstraints">

            <TextView
                android:padding="10dp"
                android:id="@+id/txt_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:drawablePadding="5dp"
                android:text="520/90/19 QL13, hiệp Bình Phước , Tp Thủ Đức" />
        </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/line_top"
        tools:ignore="MissingConstraints">

        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_add_24"
            android:text="Thêm địa chỉ mới"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>