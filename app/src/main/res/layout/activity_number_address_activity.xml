<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NumberAddressActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_shipment_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/txt_name_user_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="(Mặc định)"
            android:textColor="@color/pink"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_name_user_personal"
            app:layout_constraintStart_toEndOf="@+id/txt_name_user_personal"
            app:layout_constraintTop_toTopOf="@+id/txt_name_user_personal"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_remove_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Xóa"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/txt_name_user_personal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_name_user_personal"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Sửa"

            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/txt_name_user_personal"
            app:layout_constraintEnd_toStartOf="@+id/txt_remove_address"
            app:layout_constraintTop_toTopOf="@+id/txt_name_user_personal"
            tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_number_phone_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_top"
        android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
        android:drawablePadding="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_user_personal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_address_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_top"
        android:drawableLeft="@drawable/ic_home_bottom_navigation"
        android:drawablePadding="5dp"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_number_phone_personal"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/line_top_bigger"
        android:layout_height="200dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_add_24"
            android:gravity="left|center"
            android:paddingTop="10dp"
            android:text="Thêm địa chỉ mới"

            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>